@model IEnumerable<party.Models.Peod>


@{
    ViewBag.Title = "Index";
}

<h2>Праздники</h2>

<p>
    @Html.ActionLink("Добавить праздник", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.HolidayId }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.HolidayId })
            </td>
        </tr>
    }
</table>
